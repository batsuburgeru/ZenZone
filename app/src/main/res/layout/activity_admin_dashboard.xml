<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="17dp">

                <LinearLayout
                    android:layout_width="301dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sora_light"
                        android:text="Hello,"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/nameGreetingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sora_semibold"
                        android:text="USERNAME"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_weight="1"
                    android:backgroundTint="#C67C4E"
                    android:fontFamily="@font/sora_semibold"
                    android:paddingLeft="11dp"
                    android:paddingTop="9dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="9dp"
                    android:text="Logout"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="17dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/add_user_card"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addHeader"
                        android:layout_width="242dp"
                        android:layout_height="34dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/sora_bold"
                        android:text="Add New User"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/viewUserBtn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="#C67C4E"
                        android:fontFamily="@font/sora_semibold"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="11dp"
                        android:text="USER LIST"
                        android:textSize="14sp"
                        app:cornerRadius="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/sora"
                    android:text="Username"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/usernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/input_text_white"
                    android:ems="10"
                    android:fontFamily="@font/sora_light"
                    android:hint="Enter username"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/sora"
                    android:text="Password"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/input_text_white"
                    android:ems="10"
                    android:fontFamily="@font/sora_light"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/addUserBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C67C4E"
                    android:fontFamily="@font/sora_semibold"
                    android:text="ADD USER"
                    android:textSize="14sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/updateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/sora_bold"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Update User Information"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="17dp"
                android:background="#C67C4E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="17dp">

                <TextView
                    android:id="@+id/currentUsernameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/sora"
                    android:text="Current Username"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/currentUsernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/input_text_orange"
                    android:ems="10"
                    android:fontFamily="@font/sora_light"
                    android:hint="Enter current username"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/newUsernameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/sora"
                    android:text="New Username"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/newUsernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/input_text_orange"
                    android:ems="10"
                    android:fontFamily="@font/sora_light"
                    android:hint="Enter new username"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/newPassText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/sora"
                    android:text="New Password"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/newPassInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/input_text_orange"
                    android:ems="10"
                    android:fontFamily="@font/sora_light"
                    android:hint="Enter new password"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/updateUserBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C67C4E"
                    android:fontFamily="@font/sora_semibold"
                    android:text="SAVE CHANGES"
                    android:textSize="14sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/deleteHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/sora_bold"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Delete User Data"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="17dp"
                android:background="#C67C4E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="17dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/delUserText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/sora"
                    android:text="Enter Username"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/delUserInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/input_text_orange"
                    android:ems="10"
                    android:fontFamily="@font/sora_light"
                    android:hint="Enter username to delete data"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/delUserBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C67C4E"
                    android:fontFamily="@font/sora_semibold"
                    android:text="REMOVE USER"
                    android:textSize="14sp"
                    app:cornerRadius="10dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>